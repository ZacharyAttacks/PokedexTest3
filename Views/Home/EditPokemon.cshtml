
<h1>Edit @Model.Name</h1>

<!-- Moveset Editing -->
<h3>Moveset</h3>
@for (int i = 1; i <= 4; i++)
{
    string moveName = i switch
    {
        1 => Model.Move1,
        2 => Model.Move2,
        3 => Model.Move3,
        4 => Model.Move4,
        _ => ""
    };
    <p>Slot @i: @(string.IsNullOrEmpty(moveName) ? "Empty" : moveName)</p>
    <a href="@Url.Action("SelectMove", new { pokemonId = Model.Id, slot = i })">Choose Move</a>
}


